{
  "manifest_version": 3,
  "name": "Awesome Accessibility Auditor",
  "short_name": "A11y Auditor",
  "version": "1.1.0",
  "description": "Enterprise-grade WCAG accessibility auditing using axe-core with HTML and SARIF reporting.",
  "author": "Accessibility Platform Team",
  "icons": {
    "16": "icons/app-icon-16.png",
    "32": "icons/app-icon-32.png",
    "48": "icons/app-icon-48.png",
    "64": "icons/app-icon-64.png",
    "128": "icons/app-icon-128.png",
    "256": "icons/app-icon-256.png",
    "512": "icons/app-icon-512.png"
  },
  "action": {
    "default_title": "Run Accessibility Audit",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/app-icon-16.png",
      "32": "icons/app-icon-32.png",
      "48": "icons/app-icon-48.png",
      "128": "icons/app-icon-128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "policy.json",
        "vendor/axe.min.js",
        "content/axe-runner.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "run-scan": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Run accessibility scan on the current page"
    }
  },
  "omnibox": {
    "keyword": "a11y"
  },
  "options_page": "options/options.html",
  "incognito": "split",
  "offline_enabled": true,
  "minimum_chrome_version": "109",
  "default_locale": "en",
  "homepage_url": "https://github.com/ankitarora05/awesome-a11y-accessibility-auditor",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}